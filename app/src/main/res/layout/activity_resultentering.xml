<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#adf0f4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.emobilis.elimuassistant.ResultenteringActivity" >

    <EditText
        android:id="@+id/reg_no1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Reg No."
        android:textColorHint="#000"
        android:textStyle="bold|italic"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:textStyle="bold|italic"
        android:layout_marginTop="30dp"
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Name" />

    <EditText
        android:textStyle="bold|italic"
        android:layout_marginTop="30dp"
        android:id="@+id/marks1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Marks"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/addbtn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/viewbtn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="View" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.74">

        <Button
            android:id="@+id/viewallbtn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="View all" />

    </LinearLayout>
</LinearLayout>